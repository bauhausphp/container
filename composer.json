{
  "name": "bauhaus/container",
  "description": "Define and implement a simple container",

  "type": "library",
  "license": "MIT",

  "keywords": [
    "bauhaus",
    "container"
  ],

  "authors": [
    {
      "name": "Felipe Martins",
      "homepage": "https://blog.fefas.net"
    }
  ],

  "support": {
    "issues": "https://github.com/bauhausphp/container/issues",
    "source": "https://github.com/bauhausphp/container"
  },

  "require": {
    "php": ">=7.1",
    "container-interop/container-interop": "^1.1"
  },

  "autoload": {
    "psr-4": {
      "Bauhaus\\": "src/"
    }
  },

  "require-dev": {
    "phpunit/phpunit": "5.3.*"
  },

  "autoload-dev": {
    "psr-4": {
      "Bauhaus\\": [
        "tests/unit/"
      ]
    }
  }
}
